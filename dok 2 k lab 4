#include <stdio.h>
#include <math.h>
#include <stdbool.h>


double P(double a, double b, double c) {
  double sum = a + b + c; 
  return sum;
  }
double S(double a, double b, double c) {
    double s = (a + b + c) / 2;
    return sqrt(s * (s - a) * (s - b) * (s - c));
    return s;
    }
    
bool istengel(double a, double b, double c){
    if (a <= 0 || b <= 0 || c <= 0) {
        return true;
    }
    if (a + b > c && a + c > b && b + c > a) {
        return ;
    }
}
    
    
