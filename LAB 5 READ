#include <stdio.h>
#include <stdlib.h>
double slogenie(int matrix[i][j]; int SMatrix[i]j]) {
    return matrix[i][j] + SMatrix[i][j];
}

int main() {
    int n;
    char operation;
	printf("vvedite razmer matrix\n");
    scanf("%d", &n );
    
	double matrix[n][n];
    double SMatrix[n][n];
    int i,j;
    
    printf("vedite znachenia pervoi matrix \n"); 
    for(i=0; i<n; i++){
	
    for(j=0; j<n; j++){

    scanf("%lf", &matrix[i][j]);
		}
	}
	
	printf("vedite znachenia vtoroi matrix \n"); 
    for(i=0; i<n; i++){
	
    for(j=0; j<n; j++){

    scanf("%lf", &SMatrix[i][j]);
		}
	}
    printf("Ââåäèòå çíàê îïåðàöèè (+, - èëè /): ");
    scanf("%c", &operation);
    
	printf("summa matrix %2f\n",slogenie);
	

	return 0;
	}
