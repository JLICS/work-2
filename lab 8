#include <stdio.h>
#include <stdlib.h>
#include <string.h>

struct human {
    char name[50];
    char surname[50];
    char birth_year[10];
    char sex[10];
    char rost[10];
};

int compareHumans1(const struct human *a, const struct human *b, int field1) {
    if (field1 == 1) {
        if (strcmp(a->name, b->name) == 0) {
            return strcmp(a->rost, b->rost);
        } else {
            return strcmp(a->name, b->name);
        }
    } else if (field1 == 2) {
        return strcmp(a->surname, b->surname);
    } else if (field1 == 3) {
        return strcmp(a->birth_year, b->birth_year);
    } else if (field1 == 4) {
        return strcmp(a->sex, b->sex);
    } else if (field1 == 5) {
        return strcmp(a->rost, b->rost);
    }
    return 0;
}

int compareHumans2(const struct human *a, const struct human *b, int field2) {
    if (field2 == 1) {
        if (strcmp(a->name, b->name) == 0) {
            return strcmp(a->rost, b->rost);
        } else {
            return strcmp(a->name, b->name);
        }
    } else if (field2 == 2) {
        return strcmp(a->surname, b->surname);
    } else if (field2 == 3) {
        return strcmp(a->birth_year, b->birth_year);
    } else if (field2 == 4) {
        return strcmp(a->sex, b->sex);
    } else if (field2 == 5) {
        return strcmp(a->rost, b->rost);
    }
    return 0;
}

