	int field2;
    printf("Enter the field to sort by (1: name, 2: surname, 3: birth_year, 4: sex, 5: rost): \n");
    scanf("%d", &field2);
    
    int swapped1;
    do {
        swapped1 = 0;
        for (i = 0; i < 8; i++) {
            if (compareHumans1(&people[i], &people[i + 1], field1) > 0) {
                struct human temp = people[i];
                people[i] = people[i + 1];
                people[i + 1] = temp;
                swapped1 = 1;
            }
        }
    } while (swapped1);
    
