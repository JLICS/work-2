#include <stdio.h>
#include <math.h>

double Perimeter(double a, double b, double c) {
    return a + b + c;
}

double ploshad(double a, double b, double c) {
    double s = (a + b + c) / 2;
    return sqrt(s * (s - a) * (s - b) * (s - c));
}

int main() {
    double a, b, c;

    printf("vvedite znachenie A: ");
        scanf("%lf", &a);
    printf("vvedite znachenie B: ");
        scanf("%lf", &b);
    printf("vvedite znachenie C: ");
        scanf("%lf", &c);
    
    if(a + b > c && a + c > b && b + c > a){
        double summaperimetera = Perimeter(a,  b,  c);
        double summaploshada = ploshad( a,  b,  c); 
        
    printf("perimetr triugolnica %2f\n",summaperimetera);    
    printf("plashad triugolnica %2f\n",summaploshada);    
        
        
        return 0;
    
    }    
}
